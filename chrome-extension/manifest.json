{
  "manifest_version": 3,
  "name": "BuyPilot - Taobao Product Importer",
  "version": "1.0.0",
  "description": "Import Taobao products directly to your BuyPilot dashboard",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "https://item.taobao.com/*",
    "https://detail.tmall.com/*",
    "https://buypilot-production.up.railway.app/*",
    "http://localhost:8080/*"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "https://item.taobao.com/*",
        "https://detail.tmall.com/*"
      ],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "background": {
    "service_worker": "background.js"
  }
}
